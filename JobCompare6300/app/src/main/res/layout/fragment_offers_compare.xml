<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OffersCompareFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/title"
                android:layout_width="130dp"
                android:layout_height="40sp"
                android:text="Title" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/company"
                android:layout_width="130dp"
                android:layout_height="40sp"
                android:text="Company" />

            <TextView
                android:id="@+id/company1"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="Location" />

            <TextView
                android:id="@+id/company2"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/location"
                android:layout_width="130dp"
                android:layout_height="40sp"
                android:text="Location" />

            <TextView
                android:id="@+id/location1"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/location2"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/salary"
                android:layout_width="130dp"
                android:layout_height="40sp"
                android:text="Adjusted Salary" />

            <TextView
                android:id="@+id/salary1"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/salary2"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/bonus"
                android:layout_width="130dp"
                android:layout_height="40sp"
                android:text="Adjusted Bonus" />

            <TextView
                android:id="@+id/bonus1"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/bonus2"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/benefits"
                android:layout_width="130dp"
                android:layout_height="40sp"
                android:text="Retirement Benefits" />

            <TextView
                android:id="@+id/benefits1"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/benefits2"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/stipend"
                android:layout_width="130dp"
                android:layout_height="40sp"
                android:text="Relocation Stipend" />

            <TextView
                android:id="@+id/stipend1"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/stipend2"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/fund"
                android:layout_width="130dp"
                android:layout_height="40sp"
                android:text="Fund" />

            <TextView
                android:id="@+id/fund1"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/fund2"
                android:layout_width="140dp"
                android:layout_height="40sp"
                android:text="TextView" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom">


            <Button
                android:id="@+id/new_compare_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=" New Compare "
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/return_to_home_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Return Home"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>